include_guard()

include(hi_utils/hi_message)

function(hi_set_os_type)
  if(CMAKE_SYSTEM_NAME MATCHES "Windows")
    add_compile_definitions(OS_TYPE=WIN)
  elseif(CMAKE_SYSTEM_NAME MATCHES "Android")
    add_compile_definitions(OS_TYPE=LINUX)
  else()
    add_compile_definitions(OS_TYPE=LINUX)
  endif()
endfunction()

function(hi_get_system_name toochain_name system_name)
  if(toochain_name STREQUAL android-ndk)
    set(${system_name} HI_ANDROID_NDK PARENT_SCOPE)
  elseif(toochain_name STREQUAL aosp)
    set(${system_name} HI_ANDROID_AOSP PARENT_SCOPE)
  elseif(toochain_name STREQUAL linux-x86)
    set(${system_name} HI_LINUX_HOST PARENT_SCOPE)
  elseif(toochain_name STREQUAL linux-arm-tee)
    set(${system_name} HI_LINUX_TEE PARENT_SCOPE)
  else()
    hi_message(FATAL_ERROR "invalid toochain_name: ${toochain_name}")
  endif()
endfunction()